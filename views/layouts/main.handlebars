<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Technology Blog</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <!-- Homepage -->
      <h1>
        <a href="/ui">Homepage</a>
      </h1>

      <!-- Dashboard -->
      <h1>
        <a href="/ui/dashboard">Dashboard</a>
      </h1>

      <!-- Login -->
      {{#unless logged_in}}
        <h1>
          <a href="/ui/login">Login</a>
        </h1>
      {{/unless}}

      <!-- Logout -->
      {{#if logged_in}}
        <h1>
          <a id="logout" href="/ui">Logout</a>
        </h1>
      {{/if}}
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
    <script src="/js/logout.js"></script>
  {{/if}}
</body>
</html>
